<%= link_to product_path(product.id), class: 'flex flex-col items-center justify-between p-6 transition duration-200 ease-in-out bg-white hover:bg-gray-200 rounded-lg shadow-md hover:shadow-lg', 'data-turbo-frame': '_top' do %>
  <h1 class="text-2xl font-semibold text-dark-grey mb-4"><%= product.title %></h1>
  <%= image_tag product.photo, width: 150, class: 'object-cover rounded-lg shadow mb-4' if product.photo.attached? %>
  <span class="text-xl text-black"><%= product.price %>$</span>
<% end %>
