<div class="flex flex-col items-center space-y-8 mt-2 mb-4">
  <h1 class="text-xl font-bold text-gray-700 mt-2"><%= @product.title %></h1>
  <%= image_tag @product.photo, width: 500, class: 'object-cover rounded-lg shadow mb-2 mt-2' if @product.photo.attached? %>
  
  <div class="flex space-x-4 mt-2">
    <%= link_to edit_product_path(@product), class: 'inline-block px-4 py-2 text-lg font-bold text-white transition duration-200 ease-in-out bg-blue-500 hover:bg-blue-700 rounded-lg shadow hover:shadow-lg' do %>
      Edit
    <% end %>
    
    <%= link_to product_path(@product), class: 'inline-block px-4 py-2 text-lg font-bold text-white transition duration-200 ease-in-out bg-red-500 hover:bg-red-700 rounded-lg shadow hover:shadow-lg', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
      Delete
    <% end %>
  </div>

  <p class="text-lg text-gray-700 mt-2" ><%= @product.description %></p>
  <p class="text-2xl font-semibold text-gray-900 mt-2"><%= @product.price %>$</p>
</div>
