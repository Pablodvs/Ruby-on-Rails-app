<%= turbo_frame_tag 'brands' do %>

  <h1 class="text-2xl font-bold m-4">Products</h1>

  <%= form_with url: products_path, method: :get, class: 'flex space-x-4 m-4' do |form| %>
    <%= form.number_field :min_price, placeholder: 'Min Price', value: params[:min_price], class: 'border p-2 rounded' %>
    <%= form.number_field :max_price, placeholder: 'Max Price', value: params[:max_price], class: 'border p-2 rounded' %> 
    <%= form.submit 'Filter', class: 'inline-block px-4 py-2 text-lg font-bold transition duration-200 ease-in-out bg-blue-500 text-white hover:bg-blue-300 rounded-lg shadow hover:shadow-md' %>
  <% end %>

  <%= link_to 'All', products_path, class: 'inline-block px-2 py-1 ms-4 me-0 text-sm text-white transition duration-200 ease-in-out bg-gray-500 rounded-lg hover:bg-gray-600 shadow hover:shadow-lg' %>

  <%= render partial: 'brand', collection: @brands %>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mt-3 ms-3 mx-3">
  <%= render partial: 'product', collection: @products %>
</div>

<% end %>